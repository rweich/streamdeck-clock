{
  "branches": "main",
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@amille/semantic-release-plugins/archive",
      {
        "output": "./de.rweich.datetime.sdPlugin.zip",
        "assets": [
          {
            "pattern": "dist/de.rweich.datetime.sdPlugin/**",
            "relative": "dist"
          }
        ]
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "./de.rweich.datetime.sdPlugin.zip"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md",
          "package.json",
          "yarn.lock"
        ]
      }
    ]
  ]
}
